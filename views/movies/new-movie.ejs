<h2>Create a movie</h2>
<form method="POST" action="/movies/create">
  <label
    >Title:
    <input type="text" name="title" />
  </label>
  <label
    >Genre:
    <input type="text" name="genre" />
  </label>
  <label
    >Plot:
    <input type="text" name="plot" />
  </label>
  <label
    >Cast:
    <select name="cast" multiple="multiple">
      <% allCelebs.forEach(celeb => { %>
      <option value="<%= celeb._id %>"><%= celeb.name %></option>
      <% }) %>
    </select>
  </label>
  <button type="submit">Create</button>
</form>
