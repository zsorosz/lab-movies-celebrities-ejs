<h2>Edit movie</h2>
<form method="POST" action="/movies/<%= movie._id %> ">
  <label
    >Title:
    <input type="text" name="title" value="<%= movie.title %>" />
  </label>
  <label
    >Genre:
    <input type="text" name="genre" value="<%= movie.genre %>" />
  </label>
  <label
    >Plot:
    <input type="text" name="plot" value="<%= movie.plot %>" />
  </label>
  <label
    >Cast:
    <select name="cast" multiple="multiple">
      <% allCelebs.forEach(celeb => { %>
      <option value="<%= celeb._id %>" <%if(movie.cast.includes(celeb._id)){%>
        selected <% } %>> <%= celeb.name %>
      </option>
      <% }) %>
    </select>
  </label>
  <button type="submit">Save</button>
</form>
